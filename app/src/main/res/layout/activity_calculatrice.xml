<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/oran"
    android:backgroundTint="#FFFFFF"
    android:orientation="vertical"
    tools:context=".CalculatriceActivity">

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30pt"
        android:background="#6B6B6D"
        android:backgroundTint="#6B6B6D"
        android:ems="10"
        android:gravity="right"
        android:inputType="textPersonName"
        android:paddingTop="40pt"
        android:text="0"
        android:textSize="34sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF">

            <Button
                android:id="@+id/btnClear"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="#D6D6D6"
                android:text="AC"
                android:textSize="19sp" />

            <Button
                android:id="@+id/btnPlusMins"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="#D6D6D6"
                android:onClick="setOperator"
                android:text="+/-"
                android:textSize="19sp" />

            <Button
                android:textSize="19sp"
                android:id="@+id/button8"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="#D6D6D6"
                android:text="%" />

            <Button
                android:textSize="19sp"
                android:id="@+id/btnDiv"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="#F77402"
                android:text="/" />
        </TableRow>

        <TableRow
            android:layout_width="287dp"
            android:layout_height="30pt">

            <Button
                android:id="@+id/btn7"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="#D6D6D6"
                android:onClick="setOperator"
                android:text="7"
                android:textSize="19sp" />

            <Button
                android:textSize="19sp"
                android:id="@+id/btn8"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="#D6D6D6"
                android:text="8" />

            <Button
                android:id="@+id/btn9"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="#D6D6D6"
                android:onClick="setOperator"
                android:text="9"
                android:textSize="19sp" />

            <Button
                android:textSize="19sp"
                android:id="@+id/btnFois"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="#F77402"
                android:text="x" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn4"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="#D6D6D6"
                android:onClick="setOperator"
                android:text="4"
                android:textSize="19sp" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="#D6D6D6"
                android:onClick="setOperator"
                android:text="5"
                android:textSize="19sp" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="#D6D6D6"
                android:onClick="setOperator"
                android:text="6"
                android:textSize="19sp" />

            <Button
                android:textSize="19sp"
                android:id="@+id/btnMoins"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="#F77402"
                android:text="-" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="#D6D6D6"
                android:onClick="setOperator"
                android:text="1"
                android:textSize="19sp" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="#D6D6D6"
                android:onClick="setOperator"
                android:text="2"
                android:textSize="19sp" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="#D6D6D6"
                android:onClick="setOperator"
                android:text="3"
                android:textSize="19sp" />

            <Button
                android:textSize="19sp"
                android:id="@+id/btnPlus"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="#F77402"
                android:text="+" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn0"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_weight="1"
            android:background="#D6D6D6"
            android:onClick="setOperator"
            android:text="0"
            android:textSize="19sp" />

        <Button
            android:textSize="19sp"
            android:id="@+id/button5"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_weight="1"
            android:background="#D6D6D6"
            android:text="," />

        <Button
            android:id="@+id/btnEgal"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_weight="1"
            android:background="#F77402"

            android:onClick="OnCreate"
            android:text="="
            android:textSize="19sp" />

    </LinearLayout>
</LinearLayout>